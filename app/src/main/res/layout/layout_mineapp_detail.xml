<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/ll_mineapp_container"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none"
            android:background="@color/color_ffffff">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
           style="@style/style_mineapp_subcontainer">
            <TextView
               style="@style/style_mineapp_title"
                android:text="Label:"/>
            <TextView
                android:id="@+id/tv_label"
                style="@style/style_mineapp_content"/>
        </LinearLayout>
        <include layout="@layout/common_divide_line"/>

        <LinearLayout
            style="@style/style_mineapp_subcontainer">
            <TextView
                style="@style/style_mineapp_title"
                android:text="Tag:"/>
            <TextView
                android:id="@+id/tv_tag"
                style="@style/style_mineapp_content"/>
        </LinearLayout>
        <include layout="@layout/common_divide_line"/>

        <LinearLayout
            style="@style/style_mineapp_subcontainer">
            <TextView
                style="@style/style_mineapp_title"
                android:text="Location:"/>
            <TextView
                android:id="@+id/tv_location"
                style="@style/style_mineapp_content"/>
        </LinearLayout>

        <LinearLayout
            style="@style/style_mineapp_subcontainer">
            <TextView
                style="@style/style_mineapp_title"
                android:text="Operating System:"/>
            <TextView
                android:id="@+id/tv_os"
                style="@style/style_mineapp_content"/>
        </LinearLayout>
        <include layout="@layout/common_divide_line"/>

        <LinearLayout
            style="@style/style_mineapp_subcontainer">
            <TextView
                style="@style/style_mineapp_title"
                android:text="Ram:"/>
            <TextView
                android:id="@+id/tv_ram"
                style="@style/style_mineapp_content"/>
        </LinearLayout>
        <include layout="@layout/common_divide_line"/>

        <LinearLayout
            style="@style/style_mineapp_subcontainer">
            <TextView
                style="@style/style_mineapp_title"
                android:text="Disk:"/>
            <TextView
                android:id="@+id/tv_disk"
                style="@style/style_mineapp_content"/>
        </LinearLayout>
        <include layout="@layout/common_divide_line"/>

        <LinearLayout
            style="@style/style_mineapp_subcontainer">
            <TextView
                style="@style/style_mineapp_title"
                android:text="CPU CoreCount:"/>
            <TextView
                android:id="@+id/tv_cpucount"
                style="@style/style_mineapp_content"/>
        </LinearLayout>
        <include layout="@layout/common_divide_line"/>

        <include layout="@layout/common_divide_line"/>

        <LinearLayout
            style="@style/style_mineapp_subcontainer">
            <TextView
                style="@style/style_mineapp_title"
                android:text="Ip:"/>
            <TextView
                android:id="@+id/tv_ip"
                style="@style/style_mineapp_content"/>
        </LinearLayout>
        <include layout="@layout/common_divide_line"/>

        <LinearLayout
            style="@style/style_mineapp_subcontainer">
            <TextView
                style="@style/style_mineapp_title"
                android:text="Label:"/>
            <TextView
                style="@style/style_mineapp_content"/>
        </LinearLayout>
        <include layout="@layout/common_divide_line"/>

        <LinearLayout
            style="@style/style_mineapp_subcontainer">
            <TextView
                style="@style/style_mineapp_title"
                android:text="Label:"/>
            <TextView
                style="@style/style_mineapp_content"/>
        </LinearLayout>
        <include layout="@layout/common_divide_line"/>

        <LinearLayout
            style="@style/style_mineapp_subcontainer">
            <TextView
                style="@style/style_mineapp_title"
                android:text="Label:"/>
            <TextView
                style="@style/style_mineapp_content"/>
        </LinearLayout>
        <include layout="@layout/common_divide_line"/>

    </LinearLayout>
</ScrollView>